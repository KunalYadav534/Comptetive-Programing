#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n ;
        cin>>n;
    
        vector<long long > arr(n);
        for(int i =0 ;i<n;i++){
            cin>>arr[i];
        }
        bool unsorted = false;
        for(int i =0;i<n-1;i++){
            if(arr[i]>arr[i+1]){
               unsorted = true;
                break;
            }
        }
        if(unsorted){
            cout<<0<<endl;
            continue;
        }

        long long minDif = LLONG_MAX;
        for(int i =0 ;i<n-1;i++){
            minDif = min(minDif,arr[i+1]-arr[i]);
        }
        long long operations = (minDif)/2 +1;
        cout<<operations<<endl;
        
       }
       return 0 ;
    }
